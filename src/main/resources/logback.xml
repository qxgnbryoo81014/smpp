<configuration>
    <!--設置變數，將檔案位置設為./logs-->
    <property name="LOG_PATH" value="./logs" />
    <!-- 輸出格式 -->
	<property name="out.pattern" value="%d{YYYY-MM-dd HH:mm:ss.SSS} %-5level--- [%15.15(%thread)] %-50.50(%logger{50}: %line) : %msg%n" />
	<!--日誌文件保留天數--> 
	<property name ="max.history" value ="20" /> 
	<!--控制所有歸檔日誌文件的總大小--> 
<!-- 	<property name ="total.size.cap" value ="30GB" /> -->
    
    <appender name="console" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>${out.pattern}</pattern>
        </encoder>
    </appender>
    <!--输出到文件-->
    <appender name="file" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
            <!-- 輸出文件的位置，以每一天做切割-->
            <fileNamePattern>${LOG_PATH}/smpp.%d{yyyy-MM-dd}.log</fileNamePattern>
            <maxHistory>${max.history}</maxHistory>
<!--             <totalSizeCap>${total.size.cap}</totalSizeCap>  -->
        </rollingPolicy>
        <!--設定WARN以上級別才需要輸出至檔案-->
<!--         <filter class="ch.qos.logback.classic.filter.ThresholdFilter"> -->
<!--             <level>WARN</level> -->
<!--         </filter> -->
        <encoder>
            <!--Log的格式-->
            <pattern>${out.pattern}</pattern>
        </encoder>
    </appender>
    
    <root level="INFO">
        <!--把appender加上去-->
        <appender-ref ref="console" />
        <appender-ref ref="file" />
    </root>
</configuration>